<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainFormController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <Button accessibleText="Go to customer form." mnemonicParsing="false" onAction="#customerBtnPressed" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: transparent;">
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="271.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/Images/customerPhoto.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#appointmentBtnPressed" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: transparent;">
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView accessibleText="Go to appointments schedule." fitHeight="275.0" fitWidth="270.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/Images/appointmentPhoto.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#reportsBtn" text="Reports">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="400.0" right="25.0" top="25.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#logOutBtn" text="Log out">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="25.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
